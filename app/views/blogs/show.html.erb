<div class="container-fluid">
  <div class="row">

    <p>
      <strong>Title:</strong>
      <%= @blog.title %>
    </p>

    <p>
      <strong>Image:</strong>
      <%= image_tag @blog.image.url, style:'width:300px;height:300px;' %>
    </p>

    <p>
      <strong>Content:</strong>
      <%= @blog.content %>
    </p>

    <%= link_to 'Edit', edit_blog_path(@blog) %> |
      <%= link_to 'Back', blogs_path %>

  </div>
</div>