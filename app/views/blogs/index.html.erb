<div class="container-fluid">
 <div class="row">
<p id="notice"><%= notice %></p>

<h1>Pictures</h1>

<table>
  <thead>
    <tr>
      <th>投稿者</th>
      <th>タイトル</th>
     
      <th>投稿内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.user.name %></td>
        <td><%= blog.title %></td>
               <td><%= blog.content %></td>
        <td><%= link_to 'Show', blog %></td>
       
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
   
  </tbody>
</table>
  </div>
